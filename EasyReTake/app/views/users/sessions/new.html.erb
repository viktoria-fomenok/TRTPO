<style type="text/css">
  h2 {
    position: relative;
    left: 20%;
    color: #100137;
  }

  .login {
    position: absolute;
    left: 40%;
    top: 15%;
  }

  .buttonleft {
  }

  .button_back {
    position: absolute;
    right: 5%;
    top: 5%;
  }

  .check_box {
    display: inline-block;
  }

  .field {
  }
</style>

<div class="login">

<h2>Вход</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, 'Эл. адрес' %>
    <%= f.email_field :email, autofocus: true, placeholder: "Введите эл.адрес" %>
  </div>

  <div class="field">
    <%= f.label :password , 'Пароль'%>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Введите пароль" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <div class="check_box">
        <%= f.check_box :remember_me %>
      </div>
      <div  class="check_box">
        <%= f.label :remember_me, 'Запомнить' %>
      </div>
    </div>
  <% end -%>

  <div class="button_login">
    <%= f.submit "Войти" %>
  </div>
<% end %>

<!-- <%= render "users/shared/links" %> -->
</div>

<div class="button_back">
  <%= button_to "Назад", root_path, :method => :get %>
</div>